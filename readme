  <section class="after">
    <h2>Conteúdo depois da timeline</h2>
    <p>Exemplo de bloco abaixo.</p>
  </section>

  <script>
    (function () {
      // Roda após DOM
      document.addEventListener('DOMContentLoaded', function () {
        const sec = document.getElementById('timeline');
        if (!sec) return;

        const track = document.getElementById('tlTrack');
        const wrap = document.querySelector('.tl-bg-wrap');
        const viewport = document.querySelector('.tl-viewport');

        // Lógica de leitura do atributo: preferir px se informado, depois vw, senão fallback
        let endValue = null;
        if (sec.dataset.endExtraPx && sec.dataset.endExtraPx.trim() !== '') {
          endValue = sec.dataset.endExtraPx.trim() + 'px';
        } else if (sec.dataset.endExtraVw && sec.dataset.endExtraVw.trim() !== '') {
          endValue = sec.dataset.endExtraVw.trim() + 'vw';
        } else {
          // fallback padrão (se quiser outro valor, altere aqui)
          endValue = getComputedStyle(document.documentElement).getPropertyValue('--tl-end-extra') || '300px';
          endValue = endValue.trim();
        }

        // Aplica a variável CSS ao :root (documentElement) para uso em CSS
        document.documentElement.style.setProperty('--tl-end-extra', endValue);
        // aplica a var específica do bg (se quiser, pode ser diferente)
        if (wrap) wrap.style.setProperty('--tl-bg-extra', endValue);

        // Se o desenvolvedor quiser o scroll nativo do browser: Detecta data-native-scroll="true"
        if (sec.dataset.nativeScroll === 'true' && viewport) {
          viewport.classList.add('native-scroll');
        }

        // Para garantir compatibilidade (alguns engines podem ignorar ::after como "content" ao calcular scroll),
        // vamos criar um spacer DOM real ao final do track com a largura solicitada.
        if (track) {
          // remove spacer antigo se houver
          const old = track.querySelector('.tl-end-spacer');
          if (old) old.remove();

          const spacer = document.createElement('div');
          spacer.className = 'tl-end-spacer';
          spacer.style.width = endValue;
          spacer.style.height = '1px';
          spacer.style.pointerEvents = 'none';
          spacer.setAttribute('aria-hidden', 'true');
          track.appendChild(spacer);
        }

        // opcional: se quiser ver o valor aplicado no console (útil para debug)
        // console.log('Timeline end extra set to', endValue);
      });
    })();
  </script>
</body>
